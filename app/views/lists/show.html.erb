<div style="margin-left:50px;margin-right:50px;margin-bottom:100px">

  <div class="card" style="text-align:center;padding:35px;margin-left:300px;margin-right:300px;margin-top:50px">
    <h1><%= @list.name %></h1>

    <p>
      <strong>Tarefas: </strong>
      <%= @list.tasks.size %>
    </p>

    <p>
      <strong>Tarefas pendentes: </strong>
      <%= @list.tasks.where(done: false).size %>
    </p>

    <p>
      <strong>Tarefas concluidas: </strong>
      <%=  @list.tasks.where(done: true).size %>
    </p>

    <p>
      <strong>Status: </strong>
      <%= image_tag  color_status(@list.finished), with: 25, height: 25 %>
    </p>

    <div style="text-align:center">
      <a class="btn btn-primary" style="width:200px" href=<%= edit_list_path(@list) %> role="button">
        Editar
      </a>
      <p></p>
      <a href=<%= new_list_task_path(@list) %> class="btn btn-outline-success" style="width:200px" tabindex="-1" role="button">
        Nova Tarefa
      </a>
      <% unless @list.finished%>
        <p></p>
        <a href=<%= list_finished_path(@list) %>  data-confirm="Tem certeza?" data-method="patch" 
          class="btn btn-outline-danger" style="width:200px" tabindex="-1" role="button">
          Finalizar Lista
        </a>
      <% else %>
        <p></p>
        <a href=<%= list_enable_path(@list) %>  data-confirm="Tem certeza?" data-method="patch" 
          class="btn btn-outline-warning" style="width:200px" tabindex="-1" role="button">
          Reativar lista
        </a>
      <% end %>
    </div>
  </div>
  
  <br><br>
  
  <%= render 'lists/tasks' %>
   
</div>


